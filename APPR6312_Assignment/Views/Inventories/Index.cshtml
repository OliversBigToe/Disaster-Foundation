@model IEnumerable<APPR6312_Assignment.Models.Inventories>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory</h1>

<p>
    <button type="button" class="btn btn-outline-secondary"><a asp-action="Create">Purchase Goods?</a></button>
    <button type="button" class="btn btn-outline-warning"><a asp-controller="Home" asp-action="AdminPanel">Back</a></button>
</p>

<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th scope="col">@Html.DisplayNameFor(model => model.invDate)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.invAmount)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.invCategory)</th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-warning">
            @foreach (var item in Model)
            {
            <tr class="table-warning">
                <td>
                        @Html.DisplayFor(modelItem => item.invDate)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.invAmount)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.invCategory)
                </td>
            </tr>
            }
    </tbody>
</table>
