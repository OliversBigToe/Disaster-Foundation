@model APPR6312_Assignment.Models.User

@{
	ViewData["Title"] = "Register";
}
<div>
	<form method="post">
		<section class="vh-100 gradient-custom">
			<div class="container py-5 h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-8 col-lg-6 col-xl-5">
						<div class="card bg-dark text-white" style="border-radius: 1rem;">
							<div class="card-body p-5 text-center">

								<div class="mb-md-5 mt-md-4 pb-5">

									<h2 class="fw-bold mb-2 text-uppercase">Register</h2>
									<p class="text-white-50 mb-5">Please enter your details</p>

									<div asp-validation-summary="All"></div>

									<div class="form-outline form-white mb-4">
										<label asp-for="userName" id="userName" class="form-label">Name</label>
										<input asp-for="userName" id="userName" class="form-control form-control-lg" />
										<span asp-validation-for="userName" class="text-danger"></span>
									</div>

									<div class="form-outline form-white mb-4">
										<label asp-for="userSurname" id="userSurname" class="form-label">Surname</label>
										<input asp-for="userSurname" id="userSurname" class="form-control form-control-lg" />
										<span asp-validation-for="userSurname" class="text-danger"></span>
									</div>

									<div class="form-outline form-white mb-4">
										<label asp-for="userEmail" id="userEmail" class="form-label">Email</label>
										<input asp-for="userEmail" id="userEmail" class="form-control form-control-lg" />
										<span asp-validation-for="userEmail" class="text-danger"></span>
									</div>

									<div class="form-outline form-white mb-4">
										<label asp-for="userPassword" id="userPassword" class="form-label">Password</label>
										<input asp-for="userPassword" type="password" id="userPassword" class="form-control form-control-lg" />
										<span asp-validation-for="userPassword" class="text-danger"></span>
									</div>

									<button class="btn btn-outline-light btn-lg px-5 text-dark" type="submit">Register</button>

									<button class="btn btn-outline-light btn-lg" type="button">
										<a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Cancel</a>
									</button>

								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</form>
</div>
<div>
</div>

